<odoo>

    <record id="view_stock_movement_analysis_tree" model="ir.ui.view">
        <field name="name">stock.movement.analysis.report.tree</field>
        <field name="model">stock.movement.analysis.report</field>
        <field name="arch" type="xml">
            <tree string="Stock Movement Analysis"
                  create="false"
                  edit="false"
                  delete="false">

                <!-- Basic Info -->
                <field name="product_id" optional="show"/>
                <field name="categ_id" optional="hide"/>

                <!-- Balances -->
                <field name="opening_qty" sum="Total" optional="show"/>


                <!-- Purchase -->
                <field name="purchase_qty" sum="Total" optional="show"/>
                <field name="purchase_return_qty" sum="Total" optional="hide"/>

                <!-- Sales -->
                <field name="sales_qty" sum="Total" optional="show"/>
                <field name="sales_return_qty" sum="Total" optional="hide"/>

                <!-- Production -->
                <field name="production_qty" sum="Total" optional="hide"/>
                <field name="unbuild_qty" sum="Total" optional="hide"/>

                <!-- Adjustments -->
                <field name="adjustment_in_qty" sum="Total" optional="hide"/>
                <field name="adjustment_out_qty" sum="Total" optional="hide"/>
                <field name="other_inventory_in_qty" sum="Total" optional="hide"/>
                <field name="other_inventory_out_qty" sum="Total" optional="hide"/>

                <!-- Internal -->
                <field name="internal_in_qty" sum="Total" optional="hide"/>
                <field name="internal_out_qty" sum="Total" optional="hide"/>

                <!-- Transit -->
                <field name="transit_in_qty" sum="Total" optional="hide"/>
                <field name="transit_out_qty" sum="Total" optional="hide"/>

                <!-- View -->
                <field name="view_in_qty" sum="Total" optional="hide"/>
                <field name="view_out_qty" sum="Total" optional="hide"/>
                <!-- closing -->
                <field name="closing_qty" sum="Total" optional="show"/>
            </tree>
        </field>
    </record>

</odoo>